{
  "extends": "@tsconfig/node24",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noEmitOnError": true,
    "types": ["node", "jest"]
  },
  "include": ["src/**/*.ts", "src/**/*.json"]
}
